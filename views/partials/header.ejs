<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UI-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>ShareCode - Share your code with other developers</title>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/stylesheets/main.css">
  </head>

  <body>

    <!-- Page Header -->
    <section id="header">
      <div class="wrapper">
        <div class="header-content">
          <a id="brand" href="/" title="Go to home page">
            <picture>
              <source media="(min-width: 768px)" srcset="/images/sharecode.png">
              <img src="/images/sharecode-icon.png" alt="ShareCode">
            </picture>
          </a>

          <!-- Header Navigation -->
          <nav class="header-navigation">
            <div id="navicon">
              <div class="navicon-lines">
                <span class="nav-line"></span>
                <span class="nav-line"></span>
                <span class="nav-line"></span>
              </div>
            </div>
            <ul>
                <li><a href="/projects">All Projects</a></li>
              <% if (currentUser) { %>
                <li><a href="/project/new">Create Project</a></li>
                <li><a href="/profile/<%= currentUser._id %>">My Projects</a></li>
                <li><a href="/logout">Logout</a></li>
              <% } else { %>
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up</a></li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </section>

    <section class="flash-message">
      <div class="wrapper">
        <% if (success && success.length !== 0) { %>
          <div class="flash-box success">
            <p><%= success %></p>
            <i id="exit-flash-box" class="fa fa-times" aria-hidden="true"></i>
          </div>
        <% } %>

        <% if (error && error.length !== 0) { %>
          <div class="flash-box error">
            <p><%= error %></p>
            <i id="exit-flash-box" class="fa fa-times" aria-hidden="true"></i>
          </div>
        <% } %>
      </div>
    </section>
