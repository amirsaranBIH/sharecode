<% include ../partials/header %>

<div class="wrapper">

  <h1>View Other Projects</h1>

  <section class="projects">
    <% projects.forEach((project) => { %>
      <div class="project">
        <div class="project-section">
          <h2><%= project.name %></h2>
          <div class="project-languages">
            <ul>
              <% project.languages.forEach(language => { %>
                <li><%= language %></li>
              <% }); %>
            </ul>
          </div>
          <p class="project-description"><%= project.description %></p>
          <p class="project-contributors"><b>Contributors:</b>
            <% project.contributors.forEach(contributor => { %>
              <a href="/profile/<%= contributor._id %>"><%= contributor.username %></a>
            <% }); %>
          </p>
        </div>
        <div class="project-section">
          <time datetime="<%= project.created.toISOString(); %>"><%= project.created.toDateString(); %></time>
          <a href="/project/<%= project._id %>">View Project</a>
        </div>
      </div>
    <% }); %>
  </section>
</div>

<% include ../partials/footer %>
