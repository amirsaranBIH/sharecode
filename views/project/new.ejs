<% include ../partials/header %>

<div class="wrapper">
  <h1>New Project</h1>

  <form action="/project/new" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" placeholder="Name of the project">
    <label for="languages">Languages <small>Separate languages with commas</small></label>
    <input type="text" id="languages" name="languages" placeholder="What languages will you use">
    <label for="description">Description</label>
    <input type="text" id="description" name="description" placeholder="Describe your new project">
    <button>Create Project</button>
  </form>
</div>

